bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# move focused container to workspace
bindsym $mod+F1 move container to workspace number $ws1, workspace number $ws1
bindsym $mod+F2 move container to workspace number $ws2, workspace number $ws2
