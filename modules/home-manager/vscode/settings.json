{
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "Lua.telemetry.enable": false,

  // Basic
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorStyle": "line",
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fill",
  "editor.quickSuggestionsDelay": 0,
  "editor.rulers": [160],
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.horizontalScrollbarSize": 20,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.verticalScrollbarSize": 20,
  "editor.semanticHighlighting.enabled": true,
  "editor.suggest.preview": true,
  "editor.tabCompletion": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "on",
  "editor.autoClosingQuotes": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.defaultProfile.linux": "fish",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "extensions.ignoreRecommendations": true,
  "files.autoSaveDelay": 500,
  "files.insertFinalNewline": true, // editorconfig collision
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "security.workspace.trust.enabled": false,
  "update.mode": "none",
  // "window.menuBarVisibility": "compact",
  "window.title": "${dirty}${activeEditorShort} @ ${activeFolderLong}${separator}",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "editor.tabSize": 4,
  "terminal.integrated.cursorStyle": "line",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },

  // Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "nix": false,
    "haskell": true,
    "python": true
  },

  // Git
  "git.autofetch": false,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreWindowsGit27Warning": true,
  "gitlens.hovers.currentLine.over": "line",
  "scm.diffDecorations": "gutter",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 0,
  "helium-icon-theme.folders.color": "#90a4ae",

  // Fonts
  "editor.fontSize": 15,
  "editor.fontFamily": "'JetBrainsMono Nerd Font'",
  // "editor.fontFamily": "Comic Code",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,

  // ï…» ï„¡ __ |> <->  == >=> @
  // Custom italic fonts
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, returnâ€¦
          // "constant", //String, Number, Booleanâ€¦, this, super
          "storage.modifier" //static keyword
          // "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      // Dracula colored titles
      {
        "scope": "markup.heading.markdown punctuation.definition.heading.markdown",
        "settings": {
          "foreground": "#8a8888"
        }
      },
      {
        "scope": "heading.1.markdown entity.name.section",
        "settings": {
          "foreground": "#8be9fd"
        }
      },
      {
        "scope": "heading.2.markdown entity.name.section",
        "settings": {
          "foreground": "#50fa7b"
        }
      },
      {
        "scope": "heading.3.markdown entity.name.section",
        "settings": {
          "foreground": "#f1fa8c"
        }
      },
      {
        "scope": "heading.4.markdown entity.name.section",
        "settings": {
          "foreground": "#bd93f9"
        }
      },
      {
        "scope": "heading.5.markdown entity.name.section",
        "settings": {
          "foreground": "#ff5555"
        }
      },
      {
        "scope": "heading.6.markdown entity.name.section",
        "settings": {
          "foreground": "#ffb86c"
        }
      }
    ]
  },

  // "sideBar.foreground": "#999999",
  // "scrollbarSlider.background": "#333333",
  // "scrollbarSlider.hoverBackground": "#444444",
  // "editorRuler.foreground": "#202020",
  // Colors
  // "editor.background": "#121212",
  "workbench.colorCustomizations": {
    "minimap.background": "#1212125e",
    "statusBar.foreground": "#121212",
    "statusBar.background": "#9ccfd8",
    "statusBar.noFolderBackground": "#9ccfd8",
    "statusBar.debuggingBackground": "#9ccfd8",
    "statusBarItem.remoteBackground": "#9ccfd8",
    "statusBarItem.remoteForeground": "#121212",
    "statusBar.border": "#ffffff00"
  },

  // Smoothing
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,

  // Latex
  "[latex]": {
    "editor.rulers": [70],
    "rewrap.autoWrap.enabled": true,
    "editor.defaultFormatter": "nickfode.latex-formatter"
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.outDir": "%DIR%/_build",
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex.server.autoDownload": true,
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-pdf",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    },
    {
      "name": "latexmk-xelatex",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    },
    {
      "name": "latexmk-pvc",
      "command": "latexmk",
      "args": [
        "-f",
        "-pvc",
        "-pdf",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (pdftex backend)",
      "tools": ["latexmk-pdf"]
    },
    {
      "name": "latexmk (xelatex backend)",
      "tools": ["latexmk-xelatex"]
    }
    // {
    //   "name": "latexmk ðŸ”„",
    //   "tools": ["latexmk-pvc"]
    // }
  ],

  // Associations
  "files.associations": {
    "*.m": "matlab",
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/i3/config": "i3",
    "**/polybar/config": "ini"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  // Langs
  "prettier.tabWidth": 2,
  "[json,javascript,css,html,jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[xml]": {
    // "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[nix]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "jkillian.custom-local-formatters",
    "editor.formatOnSave": true,
  },
  "[diff]": {
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": false
  },
  "[shellscript]": {
    "editor.rulers": [80]
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[lua]": {
    "editor.defaultFormatter": "jkillian.custom-local-formatters"
  },


  // Python
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=90", "--ignore=E501"],
  "python.linting.enabled": true,
  "vsintellicode.python.completionsEnabled": true,
  "python.defaultInterpreterPath": "/usr/bin/env python3",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.rulers": [90]
  },

  // Powershell
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.startAutomatically": false,

  // Vim
  // "vim.hlsearch": true,
  // "vim.incsearch": true,
  // "vim.useSystemClipboard": false,
  "vim.easymotion": true,
  // "vim.enableNeovim": false,
  // "vim.highlightedyank.enable": true,
  "vim.leader": "<Space>",
  "vim.showMarksInGutter": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.commandlineinprogress": "#e0a8c4",
  "vim.statusBarColors.insert": "#f6c177",
  "vim.statusBarColors.normal": "#9ccfd8",
  "vim.statusBarColors.searchinprogressmode": "#e0a8c4",
  "vim.statusBarColors.visual": "#a8a8e0",
  "vim.statusBarColors.visualblock": "#a8a8e0",
  "vim.statusBarColors.visualline": "#a8a8e0",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // "vim.normalModeKeyBindingsNonRecursive": [
  //   {
  //     "before": ["<space>"],
  //     "commands": ["vspacecode.space"]
  //   },
  //   {
  //     "before": [","],
  //     "commands": [
  //       "vspacecode.space",
  //       {
  //         "command": "whichkey.triggerKey",
  //         "args": "m"
  //       }
  //     ]
  //   }
  // ],
  // "vim.visualModeKeyBindingsNonRecursive": [
  //   {
  //     "before": ["<space>"],
  //     "commands": ["vspacecode.space"]
  //   },
  //   {
  //     "before": [","],
  //     "commands": [
  //       "vspacecode.space",
  //       {
  //         "command": "whichkey.triggerKey",
  //         "args": "m"
  //       }
  //     ]
  //   }
  // ],

  // Spell check
  "cSpell.language": "en,es",
  "cSpell.enabledLanguageIds": ["markdown", "latex"],
  "cSpell.enabled": true,
  "cSpell.showStatus": true,
  "cSpell.words": [],

  // Nightswitch
  "nightswitch.autoSwitch": true,
  "nightswitch.themeNight": "RosÃ© Pine",
  "nightswitch.themeDay": "RosÃ© Pine Dawn",
  "nightswitch.sunrise": "05:00",
  "nightswitch.sunset": "18:00",

  // Unsorted
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "gitlens.codeLens.enabled": false,
  "workbench.enableExperiments": false,
  "gitlens.currentLine.enabled": false,
  "jupyter.askForKernelRestart": false,
  "insertDateString.format": "iso",
  "nix.formatterPath": "alejandra",
  "nix.enableLanguageServer": true,

  // "workbench.preferredDarkColorTheme": "Dark Material Dracula",
  // "workbench.preferredLightColorTheme": "Atom One Light",
  // "window.autoDetectColorScheme": true
  "customLocalFormatters.formatters": [
    {
      "command": "alejandra",
      "languages": ["nix"]
    },
    {
      "command": "stylua -",
      "languages": ["lua"]
    },
  ],
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "vscode-lua-format.binaryPath": "/usr/bin/en lua-format",
  "window.menuBarVisibility": "toggle",
  "python.analysis.autoImportCompletions": false,
  // "material-icon-theme.folders.color": "#fff",
  // "material-icon-theme.folders.theme": "classic",
  // "material-icon-theme.hidesExplorerArrows": true,
  "workbench.colorTheme": "RosÃ© Pine"
}
