{
  "editor.quickSuggestionsDelay": 0,
  "editor.tabCompletion": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "files.autoSaveDelay": 500,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.mode": "none",
  "workbench.startupEditor": "none",


  // integrated terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "'Fira Code', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands', 'Symbols Nerd Font', 'FiraCode NF', 'monospace",
  // WIndows
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "terminal.integrated.shellArgs.windows": "-nologo",
  // Linux
  "terminal.integrated.shell.linux": "/usr/bin/fish",
  "terminal.integrated.shellArgs.linux": ["-l"], // ["-l","-d 3"]

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreWindowsGit27Warning": true,
  "workbench.colorTheme": "Panda Syntax",
  "editor.fontSize": 14,

  // Fira Code Style
  "editor.fontFamily": "'Fira Code Medium', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands', 'Symbols Nerd Font'",
  "editor.fontLigatures": "'dlig', 'ss02', 'ss03', 'ss05', 'ss07'",

  // Operator Mono Lig
  //"editor.fontFamily": "'Operator Mono SSm Lig Medium', 'Font Awesome 5 Free Solid', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands'",
  //"editor.fontLigatures": true,

  // Result
  // ÔÖª ÔÑ° __ |> <->  == >=>

  // Custom italic fonts
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment"
          // "entity.name.type.class", //class names
          // "keyword", //import, export, return‚Ä¶
          // "constant", //String, Number, Boolean‚Ä¶, this, super
          // "storage.modifier", //static keyword
          // "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  "workbench.colorCustomizations": {
        "editor.background": "#181818",
		    // "editor.lineHighlightBackground": "#141414",
        "minimap.background": "#22222244",
        "sideBar.foreground": "#999999",
        "scrollbarSlider.background": "#333333",
        "scrollbarSlider.hoverBackground": "#444444",
        "statusBar.foreground": "#999999"
  },



  // Latex
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.outDir": "%DIR%/_build",
  "latex-workshop.latex.tools": [
    {

      "name": "latexmk-pvc",
      "command": "latexmk",
      "args": [
        "-auxdir=_build",
        "-pvc",
        "-xelatex",
        "%DOCFILE%"
      ]
    },
    {

      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-output-directory=_build",
        "%DOCFILE%"
      ]
    },
    {

      "name": "xelatex-wsl",
      "command": "wsl",
      "args": [
        "xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-output-directory=_build",
        "%DOCFILE%"
      ]
    },
    {
      "name": "biber-wsl",
      "command": "wsl",
      "args": [
        "biber",
        "_build/%DOCFILE%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk üîÅ",
      "tools": [
        "latexmk-pvc"
      ]
    },
    {
      "name": "xelatex",
      "tools": [
        "xelatex"
      ]
    },
    {
      "name": "[WSL] xelatex",
      "tools": [
        "xelatex-wsl"
      ]
    },
    {
      "name": "[WSL] xelatex ‚ûû biber ‚ûû xelatex‚Ää√ó‚Ää2",
      "tools": [
        "xelatex-wsl",
        "biber-wsl",
        "xelatex-wsl",
        "xelatex-wsl"
      ]
    }
  ],

  // Associations
  "files.associations": {
    "*.m": "matlab",
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/i3/config": "i3",
    "**/polybar/config": "ini"
  },
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],



  // Web
  "prettier.tabWidth": 2,
  "[json]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[css]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[html]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[xml]": {
    // "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Python
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  // "python.jediEnabled": false,
  // "python.languageServer": "Pylance",
  "vsintellicode.python.completionsEnabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },


  // Discord
  "discord.detailsEditing": "Editing {lang}",
  "discord.detailsDebugging": "Debugging {lang}",
  "discord.lowerDetailsEditing": "{total_lines} lines",
  "discord.lowerDetailsDebugging": "{total_lines} lines",
  "discord.suppressNotifications": true,

  // Action Buttons
  "actionButtons": {
    "defaultColor": "#999999",
    "loadNpmCommands":true,
    "reloadButton": "Actions"
  },


  // Unsorted
  "tabnine.experimentalAutoImports": true,
  "glassit.alpha": 250,
  "colorize.enable_search_variables": false,
  "colorize.include": [
    "*",
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "**/*.styl"
  ],
  "powershell.integratedConsole.showOnStartup": false,
  "extensions.ignoreRecommendations": true,
  "powershell.startAutomatically": false,
  "files.trimTrailingWhitespace": true,
  "scm.diffDecorations": "gutter",
  "editor.minimap.renderCharacters": false,
  "python.pythonPath": "/home/ayats/main_venv/bin/python",
  "editor.minimap.size": "fit",
  "editor.minimap.enabled": false,
  "redhat.telemetry.enabled": false,
  "helium-icon-theme.folders.color": "#90a4ae",
  "workbench.productIconTheme": "material-product-icons",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 1,
  "workbench.iconTheme": "material-icon-theme",
  "editor.semanticHighlighting.enabled": true,
  "Lua.telemetry.enable": false,
  "files.autoSave": "afterDelay",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false





}