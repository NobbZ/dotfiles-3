set $mod Mod4
floating_modifier $mod

exec_always --no-startup-id autotiling
# exec --no-startup-id megasync & # TODO fix
exec_always --no-startup-id /usr/bin/i3wsr


# ███████╗████████╗██╗   ██╗██╗     ███████╗
