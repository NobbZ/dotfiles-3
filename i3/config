client.focused          #303030 #303030 #ffffff #444444   #222222
client.focused_inactive #222222 #222222 #ffffff #222222   #222222
client.unfocused        #222222 #222222 #888888 #222222   #222222
client.urgent           #222222 #222222 #ffffff #ff0000   #ff0000
client.placeholder      #222222 #222222 #ffffff #000000   #222222
client.background       #ffffff

default_border          pixel 3
default_floating_border none
#for_window [class=".*"] border none


# ██╗      █████╗ ██╗   ██╗ ██████╗ ██╗   ██╗████████╗
# ██║     ██╔══██╗╚██╗ ██╔╝██╔═══██╗██║   ██║╚══██╔══╝
# ██║     ███████║ ╚████╔╝ ██║   ██║██║   ██║   ██║   
# ██║     ██╔══██║  ╚██╔╝  ██║   ██║██║   ██║   ██║   
# ███████╗██║  ██║   ██║   ╚██████╔╝╚██████╔╝   ██║   
# ╚══════╝╚═╝  ╚═╝   ╚═╝    ╚═════╝  ╚═════╝    ╚═╝   
for_window [class="Xfce-*"] floating enable
for_window [class="^Genymotion$"] floating enable
for_window [class="Nitrogen"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="Wrapper-2.0"] floating enable
for_window [class="polychromatic-controller"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# Automoves
for_window [class="Genymotion Player"] move to workspace $ws8
for_window [class="discord"] move to workspace $ws9




#  ██████╗  █████╗ ██████╗ ███████╗
# ██╔════╝ ██╔══██╗██╔══██╗██╔════╝
# ██║  ███╗███████║██████╔╝███████╗
# ██║   ██║██╔══██║██╔═══╝ ╚════██║
# ╚██████╔╝██║  ██║██║     ███████║
#  ╚═════╝ ╚═╝  ╚═╝╚═╝     ╚══════╝
smart_gaps on
gaps inner 15
gaps outer 0
bindsym $mod+plus gaps inner all plus 1
bindsym $mod+minus gaps inner all minus 1
bindsym $mod+Control+plus gaps outer all plus 1
bindsym $mod+Control+minus gaps outer all minus 1



# ██╗  ██╗███████╗██╗   ██╗██████╗ ██╗███╗   ██╗██████╗ ███████╗
# ██║ ██╔╝██╔════╝╚██╗ ██╔╝██╔══██╗██║████╗  ██║██╔══██╗██╔════╝
# █████╔╝ █████╗   ╚████╔╝ ██████╔╝██║██╔██╗ ██║██║  ██║███████╗
# ██╔═██╗ ██╔══╝    ╚██╔╝  ██╔══██╗██║██║╚██╗██║██║  ██║╚════██║
# ██║  ██╗███████╗   ██║   ██████╔╝██║██║ ╚████║██████╔╝███████║
